@import '../brand.import'

setup-hero($customSettings = {}) {

	/*
   * Default settings:
   */
	$defaultSettings = {
		padding: 1em,
		height: 500px,
		content: {
			borderWidth: 1px,
			borderColor: $brandGrey
		}
	}

	$settings = merge($defaultSettings, $customSettings);

  /*
   * Breakpoint setup:
   */
	.hero-sticky-header,
	.hero__header {
		z-index: 100;
		padding: $settings.padding;
		color: $brandWhite;
		background-color: transparent;

		h3 {
			font-size: 1.125rem;
			opacity: 0.7;
			margin: 0;
		}
	}

  .hero-sticky-header {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;

		background-position: 50% 50%;
		background-repeat: no-repeat;
		background-size: cover;
	}

	.hero {
		z-index: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;

		min-height: $settings.height;
		width: 100%;

		background-position: 50% 50%;
		background-repeat: no-repeat;
		background-size: cover;

		text-align: center;
	}

	.hero.-effect-darken::before {
		content: " ";
		background-color: black;
		opacity: 0.2;
		width: 100%;
		height: $settings.height;
		position: absolute;
		z-index: 0;
	}

	.hero.-effect-lighten::before {
		content: " ";
		background-color: white;
		opacity: 0.2;
		width: 100%;
		height: $settings.height;
		position: absolute;
		z-index: 0;
	}

	.hero__header {
		z-index: 100;
		align-self: flex-start;
	}

	.hero code {
		font-size: 3em;
	}

	.hero p {
		font-size: 1.5em;
	}

	.hero__container {
		display: flex;
		flex-direction: column;
		justify-content: center;

		flex: 1 0 auto;
	}

	.content {
		min-height: ($settings.height - 2*$settings.padding);
		padding: $settings.padding;
	}

	.content--collapse {
	  min-height: initial;
	}

	.content__container,
	.content__container--expand {
		border: $settings.content.borderWidth solid $settings.content.borderColor;
		border-radius: 3px;
	}

	.content__container--expand {
		min-height: ($settings.height - 2*$settings.padding - 2*$settings.content.borderWidth);
	}

	/* iPad [portrait + landscape] */
  +between(768px, 1024px) {
		.hero {
	    background-attachment: scroll;
		}

		.hero__header {
			background-position: 50% 100%;
	    background-attachment: scroll;
		}
	}

	/* iPhone [portrait + landscape] */
	+below('mobile-portrait') {
		.hero {
			background-attachment: scroll;
		}

		.hero__header {
			visibility: hidden;
		}

		.hero__header > * {
			visibility: hidden;
		}
	}
}
