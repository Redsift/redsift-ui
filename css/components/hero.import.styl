@import 'common.import'
@import 'brand.import'

section.hero {
	height: $hero;
	background-position: 50% 50%;
	background-repeat: no-repeat;
	background-attachment: fixed;
	background-size: cover;
}
section.hero.darken::before {
	content: " ";
	background-color: black;
	opacity: 0.2;
	width: 100%;
	height: $hero;
	position: absolute;
	z-index: 0;
}

section.hero.lighten::before {
	content: " ";
	background-color: white;
	opacity: 0.2;
	width: 100%;
	height: $hero;
	position: absolute;
	z-index: 0;
}	
	
section.hero > * {
    text-align: center;
}

section.hero div.container {
	padding: 0 $padding $padding $padding; 
	z-index: 1;
	position: relative;
}

section.hero h1:first-of-type {
	font-size: 1.125em;
	text-align: left;
	text-transform: uppercase;
	opacity: 0.7;
	letter-spacing: initial;
	padding-bottom: ($hero / 4);
}

section.hero code {
	font-size: 3em;
}

section.hero p {
	font-size: 1.5em;
}

section.content {
	min-height: $hero;
	padding: $padding;
}

section.content div.container {
	border: 1px solid $brandGrey;
	border-radius: 3px;
	height: 100%;
}