
radial-chart($labelColour = #3e3e3e, $tickColour = black) {
  .labels {
    text-transform: uppercase;
    font-weight: normal;
    fill: $labelColour;
    font-size: 1.0em;
  }
  
  .outer-line {
    stroke: black;
    stroke-width: 1.5px;
    fill: none;
  }
  
  .tick-line {
    stroke: grey;
    stroke-width: 0.5px;
    stroke-dasharray: 2,2;
    fill: none;
  }
  
  .spokes {
    stroke: black;
    stroke-width: 0.5px;
  }
  
  .axis path,
  .axis line {
    fill: none;
    stroke: $tickColour;
    stroke-width: 2.5px;
    shape-rendering: crispEdges;
  }
 
  path {
    fill: url('data:image/svg+xml;base64,');
  }
 
  .axis text {
    fill: $labelColour;
    font-size: 1.1em;
    filter: url(#text-bg);
  }
  
  .x.axis path {
    display: none;
  }
}