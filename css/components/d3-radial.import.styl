
radial-chart($labelColour = #3e3e3e, $tickColour = black) {
  .d3-rc {
    .segment-label {
      text-transform: uppercase;
      fill: $labelColour;
    }
    
    .outer-line {
      stroke: $tickColour;
      stroke-width: 1.5px;
      fill: none;
    }
    
    .tick-line {
      stroke: grey;
      stroke-width: 0.5px;
      stroke-dasharray: 2,2;
      fill: none;
    }
    
    .spokes {
      stroke: $tickColour;
      stroke-width: 0.5px;
    }
    
    .axis path,
    .axis line {
      fill: none;
      stroke: $tickColour;
      stroke-width: 2.5px;
      shape-rendering: crispEdges;
    }
  
    .axis text {
      fill: $labelColour;
    }
    
    .x.axis path {
      display: none;
    }
  }
}